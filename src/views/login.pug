extends base.pug

    
block content 
   if errorMessage 
      span=errorMessage
   form(method="POST") 
        input(name="username", type="text", required, placeholder="User Name")
        input(name="password", type="password", required, placeholder="Password")
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=85bb6c4271b9ddfde058&allow_signup=false") Continue with Github &rarr;
   hr
   div 
      span Don't have an account? 
      a(href="/join") Create one now &rarr;