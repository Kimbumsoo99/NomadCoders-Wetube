extends ../base
include ../mixins/video

block content 
    div.profile__data
        if !user.avatarUrl
            img(src="/uploads/avatars/user.png").avatar
        else 
            img(src=user.avatarUrl,crossorigin).avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +videoMixin(video)
        else 
            span.empty__message 아직 올린 영상이 없습니다