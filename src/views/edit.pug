extends base.pug

block content 
    h4 Update Video
    form( method="post")
        input(name="title", placeholder="Video Title", value=video.title, required,maxlength=80)
        input(type="text" placeholder="Description" required, value=video.description,name="description",minlength=10)
        input(type="text" placeholder="Hashtags, separated by comma." required, value=video.hashtags.join(), name="hashtags")
        input(value="Save",type="submit")
