extends base.pug

block content 
    h4 Change Title of Video
    form( method="post")
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(type="text" placeholder="Description" required, value=video.description,name="description",minlength=20)
        input(type="text" placeholder="Hashtags, separated by comma." required, value=video.hashtags.join(), name="hashtags")
        input(value="Save",type="submit")
