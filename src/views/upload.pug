extends base.pug

block content 
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="post", enctype="multipart/form-data")  
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(type="text" placeholder="Title" required, name="title",maxlength=80)
        input(type="text" placeholder="Description" required, name="description",minlength=10)
        input(type="text" placeholder="Hashtags, separated by comma." required, name="hashtags")
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/assets/js/recorder.js")